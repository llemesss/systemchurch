# Configurações de Produção para o Render
NODE_ENV=production
PORT=10000

# JWT Secret (será gerado automaticamente pelo Render)
JWT_SECRET=your-super-secret-jwt-key-here

# Database URL (será fornecido pelo Render PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database

# CORS Origins (domínios permitidos)
ALLOWED_ORIGINS=https://igreja-app-frontend.vercel.app,https://igreja-app.vercel.app,http://localhost:5173,http://localhost:5174

# Configurações opcionais
DATABASE_SSL=true
DATABASE_MAX_CONNECTIONS=10