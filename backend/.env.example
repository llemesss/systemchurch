# Configurações do Servidor
NODE_ENV=development
PORT=3001

# JWT Secret (use uma chave forte em produção)
JWT_SECRET=igreja-secret-key

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-example.us-east-2.aws.neon.tech/neondb?sslmode=require
NEON_DATABASE_URL=postgresql://username:password@ep-example.us-east-2.aws.neon.tech/neondb?sslmode=require

# Configurações de CORS (URLs permitidas)
ALLOWED_ORIGINS=http://localhost:5173,https://seu-frontend.vercel.app

# Configurações de Log
LOG_LEVEL=info

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100