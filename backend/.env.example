# Configurações do Servidor
NODE_ENV=development
PORT=3001

# JWT Secret (use uma chave forte em produção)
JWT_SECRET=seu_jwt_secret_super_seguro_aqui

# Supabase JWT Secret (para validar tokens do Supabase Auth)
# Obtenha esta chave no painel do Supabase -> Settings -> API -> JWT Secret
SUPABASE_JWT_SECRET=sua_supabase_jwt_secret_aqui

# Banco de Dados PostgreSQL (apenas para produção)
# Substitua pelos valores do seu Supabase
DATABASE_URL=postgresql://postgres:sua_senha@db.xxx.supabase.co:5432/postgres

# Configurações de CORS (URLs permitidas)
ALLOWED_ORIGINS=http://localhost:5173,https://seu-frontend.vercel.app

# Configurações de Log
LOG_LEVEL=info

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100